{
  "openapi": "3.0.1",
  "info": {
    "version": "2.0.1",
    "title": "healthy-hub-project-backend"
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [
    { "url": "https://health-en-app.onrender.com" },
    { "url": "http://localhost:3000" }
  ],

  "tags": [
    {
      "name": "Auth",
      "description": "Authorization endpoints"
    },
    {
      "name": "User",
      "description": "User endpoints"
    },
    {
      "name": "Recommended foods",
      "description": "Getting recommended foods list"
    }
  ],

  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "User registration",
        "parameters": [],

        "requestBody": {
          "description": "Registration's object",
          "required": true,

          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",

            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "409": {
            "description": "Provided email already exists",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/auth/signin": {
      "post": {
        "tags": ["Auth"],
        "summary": "User login",
        "parameters": [],

        "requestBody": {
          "description": "Login's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/auth/forgot-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "User forgot password",
        "parameters": [],

        "requestBody": {
          "description": "Forgot-password's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ForgotRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation (new password sent)",
            "content": {}
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "404": {
            "description": "User not found",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/auth/signout": {
      "post": {
        "tags": ["Auth"],
        "summary": "User logout",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": false,
          "content": {}
        },
        "responses": {
          "204": {
            "description": "User signed out",
            "content": {}
          },
          "401": {
            "description": "Not authorized",
            "content": {}
          }
        }
      }
    },

    "/api/user/current": {
      "get": {
        "tags": ["User"],
        "summary": "Get current user info",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": false,
          "content": {}
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "401": {
            "description": "Not authorized",
            "content": {}
          }
        }
      }
    },

    "/api/user/update": {
      "put": {
        "tags": ["User"],
        "summary": "Update user info or contacts",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Not authorized",
            "content": {}
          }
        }
      }
    },

    "/api/user/goal": {
      "put": {
        "tags": ["User"],
        "summary": "Update user's goal",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUserGoal"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Goal updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateUserGoalResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Not authorized",
            "content": {}
          }
        }
      }
    },

    "/api/user/weight": {
      "post": {
        "tags": ["User"],
        "summary": "Update user's weight",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUserWeight"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Weight updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateUserWeightResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Not authorized",
            "content": {}
          }
        }
      }
    },

    "/api/user/water-intake": {
      "post": {
        "tags": ["Water-intake"],
        "summary": "Add water consumption info",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "addWaterIntake object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddWaterIntakeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddWaterIntakeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      },
      "delete": {
        "tags": ["Water-intake"],
        "summary": "Reset water consumption value to 0 for current day",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResetWaterIntakeResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "404": {
            "description": "Not found. User has no such records that may be reset on that date",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/user/food-intake": {
      "post": {
        "tags": ["Food-intake"],
        "summary": "Add food intake info",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "addFoodIntake object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddFoodIntakeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddFoodIntakeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      },
      "delete": {
        "tags": ["Food-intake"],
        "summary": "Completely clear food intake of specified type for current date",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "required": true,
            "description": "type of food intake",
            "schema": {
              "type": "string",
              "example": "lunch"
            }
          }],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResetFoodIntakeResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "404": {
            "description": "Not found",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/user/food-intake/{id}": {
      "put": {
        "tags": ["Food-intake"],
        "summary": "Update food intake entry by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "id of the food intake entry to be updated",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "addFoodIntake object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFoodIntakeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateFoodIntakeResponse"
                }
              }
            }
          },

          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      },
      "delete": {
        "tags": ["Food-intake"],
        "summary": "Delete specific food intake by Id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "id of the food intake entry to delete",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "type",
            "in": "query",
            "required": true,
            "description": "type of food intake",
            "schema": {
              "type": "string",
              "example": "lunch"
            }
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResetFoodIntakeByIdResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "404": {
            "description": "Not found",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/user/statistics": {
      "get": {
        "tags": ["Statistics"],
        "summary": "Get user's stats within requested period, including calories and water consumtion, weight",
        "parameters": [
          {
            "name": "dateFrom",
            "in": "query",
            "required": true,
            "description": "date string in arbitrary format (toISOString is preferable)",
            "schema": {
              "type": "string",
              "example": "2023-12-15"
            }
          },
          {
            "name": "dateTo",
            "in": "query",
            "required": true,
            "description": "date string in arbitrary format (toISOString is preferable)",
            "schema": {
              "type": "string",
              "example": "2023-12-17T12:23:43.916Z"
            }
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Multiple Response Types",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getStatisticsResponses"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": { "message": "Invalid date format" }
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/recommended-food": {
      "get": {
        "tags": ["Recommended foods"],
        "parameters": [],

        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getRecommendedFoodsResponse"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password",
          "goal",
          "gender",
          "age",
          "height",
          "weight",
          "activity"
        ],

        "properties": {
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "John Johnson"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          },
          "goal": {
            "type": "string",
            "enum": ["lose fat", "maintain", "gain muscle"]
          },

          "gender": {
            "type": "string",
            "enum": ["male", "female"]
          },

          "age": {
            "type": "number",
            "example": 35
          },

          "height": {
            "type": "number",
            "example": 170
          },

          "weight": {
            "type": "number",
            "example": 80
          },

          "activity": {
            "type": "number",
            "enum": [1.2, 1.375, 1.55, 1.725, 1.9]
          }
        }
      },

      "UserResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string",
                "description": "User's id",
                "example": "873rgbfjcr7w94rwfbcs7w"
              },
              "name": {
                "type": "string",
                "description": "User's name",
                "example": "John Johnson"
              },
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email"
              },
              "goal": {
                "type": "string",
                "description": "User's goal",
                "example": "maintain"
              },
              "gender": {
                "type": "string",
                "description": "User's gender",
                "example": "female"
              },
              "age": {
                "type": "number",
                "description": "User's age",
                "example": 35
              },
              "height": {
                "type": "number",
                "description": "User's height in cm",
                "example": 170
              },
              "weight": {
                "type": "number",
                "description": "User's weight in kg",
                "example": 80
              },
              "activity": {
                "type": "number",
                "description": "User's activity",
                "example": 1.2
              },
              "avatarURL": {
                "type": "string",
                "description": "User's avatar link"
              },
              "bmr": {
                "type": "number",
                "description": "User's daily goal of calories",
                "example": 2600
              },
              "water": {
                "type": "number",
                "description": "User's daily goal of water in ml",
                "example": 2000
              },
              "nutrients": {
                "type": "object",
                "properties": {
                  "protein": {
                    "type": "number",
                    "description": "Daily goal's protein",
                    "example": 600
                  },
                  "fat": {
                    "type": "number",
                    "description": "Daily goal's fat",
                    "example": 500
                  },
                  "carbonohidrates": {
                    "type": "number",
                    "description": "Daily goal's carbonohidrates",
                    "example": 1600
                  }
                }
              },
              "token": {
                "type": "string",
                "description": "User's token"
              }
            }
          }
        }
      },

      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],

        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },

      "ForgotRequest": {
        "type": "object",
        "required": ["email"],

        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          }
        }
      },

      "UpdateUser": {
        "type": "object",
        "required": ["name", "gender", "age", "height", "weight", "activity"],
        "properties": {
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "John Johnson",
            "required": true
          },

          "gender": {
            "type": "string",
            "enum": ["male", "female"]
          },

          "age": {
            "type": "number",
            "example": 35
          },

          "height": {
            "type": "number",
            "example": 170
          },

          "weight": {
            "type": "number",
            "example": 80
          },

          "activity": {
            "type": "number",
            "enum": [1.2, 1.375, 1.55, 1.725, 1.9]
          },
          "avatarURL": {
            "type": "string",
            "description": "User's avatar link"
          }
        }
      },

      "UpdateUserGoal": {
        "type": "object",
        "required": ["goal"],
        "properties": {
          "goal": {
            "type": "string",
            "enum": ["Lose fat", "Maintain", "Gain muscle"]
          }
        }
      },

      "UpdateUserGoalResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "goal": {
                "type": "string",
                "description": "user's goal updated",
                "example": "Lose fat"
              }
            }
          }
        }
      },

      "UpdateUserWeight": {
        "type": "object",
        "required": ["weight"],
        "properties": {
          "weight": {
            "type": "number",
            "example": 100
          }
        }
      },

      "UpdateUserWeightResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "weight": {
                "type": "number",
                "description": "user's weight updated",
                "example": 100
              }
            }
          }
        }
      },

      "AddWaterIntakeRequest": {
        "type": "object",
        "required": ["waterIntake"],
        "properties": {
          "waterIntake": {
            "type": "number",
            "description": "water-intake value in ml. Number may be both decimal and integer, but must be positive",
            "example": 1000
          }
        }
      },
      "AddWaterIntakeResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "success message",
            "example": "water intake increased by 500 ml"
          },
          "waterIntake": {
            "type": "number",
            "description": "water-intake value in mL after update",
            "example": 2000
          }
        }
      },
      "AddFoodIntakeRequest": {
        "type": "object",
        "required": [
          "carbohidrates",
          "protein",
          "fat",
          "dish",
          "type",
          "calories"
        ],
        "properties": {
          "carbohidrates": {
            "type": "number",
            "description": "amount of carbohidrates in respective product",
            "example": 140
          },
          "protein": {
            "type": "number",
            "description": "amount of protein in respective product",
            "example": 30
          },
          "fat": {
            "type": "number",
            "description": "amount of fat in respective product",
            "example": 50
          },
          "dish": {
            "type": "string",
            "description": "name of the dish",
            "example": "Avocado"
          },
          "type": {
            "type": "string",
            "description": "food intake type",
            "example": "breakfast"
          },
          "calories": {
            "type": "number",
            "description": "amount of calories in respective product",
            "example": 500
          }
        }
      },
      "AddFoodIntakeResponse": {
        "type": "object",
        "properties": {
          "foodIntake": {
            "type": "object",
            "properties": {
              "breakfast": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "carbohidrates": {
                      "type": "number",
                      "description": "amount of carbohidrates in respective product",
                      "example": 140
                    },
                    "protein": {
                      "type": "number",
                      "description": "amount of protein in respective product",
                      "example": 30
                    },
                    "fat": {
                      "type": "number",
                      "description": "amount of fat in respective product",
                      "example": 50
                    },
                    "dish": {
                      "type": "string",
                      "description": "name of the dish",
                      "example": "Avocado"
                    },
                    "calories": {
                      "type": "number",
                      "description": "amount of calories in respective product",
                      "example": 640
                    },
                    "totalCalories": {
                      "type": "number",
                      "description": "amount of total calories consumption value after update",
                      "example": 640
                    },
                    "_id": {
                      "type": "string",
                      "description": "food intake object id"
                    }
                  }
                }
              },
              "dinner": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              },
              "snack": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              },
              "lunch": {
                "type": "array",
                "items": {
