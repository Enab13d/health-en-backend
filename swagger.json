{
  "openapi": "3.0.1",
  "info": {
    "version": "2.0.0",
    "title": "Swagger test",
    "description": "Showing off swagger-ui-express"
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [{ "url": "http://localhost:3000" }],

  "tags": [
    {
      "name": "Auth",
      "description": "Authorization endpoints"
    }
  ],

  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "User registration",
        "parameters": [],

        "requestBody": {
          "description": "Registration's object",
          "required": true,

          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",

            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "409": {
            "description": "Provided email already exists",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/auth/signin": {
      "post": {
        "tags": ["Auth"],
        "summary": "User login",
        "parameters": [],

        "requestBody": {
          "description": "Login's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/auth/forgot-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "User forgot password",
        "parameters": [],

        "requestBody": {
          "description": "Forgot-password's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ForgotRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation (new password sent)",
            "content": {}
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "404": {
            "description": "User not found",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/auth/signout": {
      "post": {
        "tags": ["Auth"],
        "summary": "User logout",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": false,
          "content": {}
        },
        "responses": {
          "204": {
            "description": "User signed out",
            "content": {}
          }
        }
      }
    },

    "/api/user/water-intake": {
      "post": {
        "tags": ["Stats", "Water-intake"],
        "summary": "Add water consumption info",
        "parameters": [],
        "requestBody": {
          "description": "addWaterIntake object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddWaterIntakeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddWaterIntakeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      },
      "delete": {
        "tags": ["Stats"],
        "summary": "Reset water consumption value to 0 for current day",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResetWaterIntakeResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "404": {
            "description": "Not found. User has no such records that may be reset on that date",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },
    "/api/user/food-intake": {
      "post": {
        "tags": ["Stats", "Food-intake"],
        "summary": "Add food intake info",
        "parameters":[],
        "requestBody": {
          "description": "addFoodIntake object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddFoodIntakeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddFoodIntakeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },
    "/api/user/food-intake/{id}": {
      "put": {
        "tags": ["Stats", "Food-intake"],
        "summary": "pdate food intake entry by id",
        "parameters":[
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "id of the food intake entry to be updated",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "addFoodIntake object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFoodIntakeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateFoodIntakeSuccessResponse"
                }
              }
            }
          },
          "204": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateFoodIntakeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },
    "/api/user/statistics": {
      "get": {
        "tags": ["Statistics"],
        "summary": "Get user's stats within requested period, including calories and water consumtion, weight",
        "parameters": [],
        "requestBody": {
          "description": "getStats object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/getStatisticsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getStatisticsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": { "message": "Invalid date format" }
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password",
          "goal",
          "gender",
          "age",
          "height",
          "weight",
          "activity"
        ],

        "properties": {
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "John Johnson"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          },
          "goal": {
            "type": "string",
            "enum": ["Lose fat", "Maintain", "Gain muscle"]
          },

          "gender": {
            "type": "string",
            "enum": ["Male", "Female"]
          },

          "age": {
            "type": "number",
            "example": 35
          },

          "height": {
            "type": "number",
            "example": 170
          },

          "weight": {
            "type": "number",
            "example": 80
          },

          "activity": {
            "type": "number",
            "enum": [1.2, 1.375, 1.55, 1.725, 1.9]
          }
        }
      },

      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "User's token"
          },
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "John Johnson"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          }
        }
      },

      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],

        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },

      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "User's token"
          },

          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          }
        }
      },

      "ForgotRequest": {
        "type": "object",
        "required": ["email"],

        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          }
        }
      },
      "AddWaterIntakeRequest": {
        "type": "object",
        "required": ["waterIntake"],
        "properties": {
          "waterIntake": {
            "type": "number",
            "description": "water-intake value in ml. Number may be both decimal and integer, but must be positive",
            "example": 1000
          }
        }
      },
      "AddWaterIntakeResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "success message",
            "example": "water intake increased by 500 ml"
          },
          "waterIntake": {
            "type": "number",
            "description": "waterIntake value in mL after update",
            "example": 2000
          }
        }
      },
      "AddFoodIntakeRequest": {
        "type": "object",
        "required":["carbohidrates", "protein", "fat", "dish", "type"],
        "properties": {
          "carbohidrates": {
            "type": "number",
            "description": "amount of carbohidrates in respective product",
            "example": 140
          },
          "protein": {
            "type": "number",
            "description": "amount of protein in respective product",
            "example": 30
          },
          "fat": {
            "type": "number",
            "description": "amount of fat in respective product",
            "example": 50
          },
          "dish": {
            "type": "string",
            "description": "name of the dish",
            "example": "Avocado"
          },
          "type": {
            "type": "string",
            "description": "food intake type",
            "example": "breakfast"
          }
        }
      },
      "AddFoodIntakeResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "success message",
            "example": "Food intake successfuly added"
          },
          "data": {
            "type": "array",
            "items": {
              "breakfast": {
                "type": "object",
                "properties": {
                  "carbohidrates": {
                    "type": "number",
                    "description": "amount of carbohidrates in respective product",
                    "example": 140
                  },
                  "protein": {
                    "type": "number",
                    "description": "amount of protein in respective product",
                    "example": 30
                  },
                  "fat": {
                    "type": "number",
                    "description": "amount of fat in respective product",
                    "example": 50
                  },
                  "dish": {
                    "type": "string",
                    "description": "name of the dish",
                    "example": "Avocado"
                  },
                  "_id": {
                    "type": "string",
                    "description": "food intake obect id"
                  }
                }
              },
              "dinner": {
                "type": "array",
                "items": {
                  "properties": {
                    "carbohidrates": {
                      "type": "number",
                      "description": "amount of carbohidrates in respective product",
                      "example": 140
                    },
                    "protein": {
                      "type": "number",
                      "description": "amount of protein in respective product",
                      "example": 30
                    },
                    "fat": {
                      "type": "number",
                      "description": "amount of fat in respective product",
                      "example": 50
                    },
                    "dish": {
                      "type": "string",
                      "description": "name of the dish",
                      "example": "Avocado"
                    },
                    "_id": {
                      "type": "string",
                      "description": "food intake obect id"
                    }
                  }
                }
              },
              "lunch": {
                "type": "array",
                "items": {
                  "properties": {
                    "carbohidrates": {
                      "type": "number",
                      "description": "amount of carbohidrates in respective product",
                      "example": 140
                    },
                    "protein": {
                      "type": "number",
                      "description": "amount of protein in respective product",
                      "example": 30
                    },
                    "fat": {
                      "type": "number",
                      "description": "amount of fat in respective product",
                      "example": 50
                    },
                    "dish": {
                      "type": "string",
                      "description": "name of the dish",
                      "example": "Avocado"
                    },
                    "_id": {
                      "type": "string",
                      "description": "food intake obect id"
                    }
                  }
                }
              },
              "snack": {
                "type": "array",
                "items": {
                  "properties": {
                    "carbohidrates": {
                      "type": "number",
                      "description": "amount of carbohidrates in respective product",
                      "example": 140
                    },
                    "protein": {
                      "type": "number",
                      "description": "amount of protein in respective product",
                      "example": 30
                    },
                    "fat": {
                      "type": "number",
                      "description": "amount of fat in respective product",
                      "example": 50
                    },
                    "dish": {
                      "type": "string",
                      "description": "name of the dish",
                      "example": "Avocado"
                    },
                    "_id": {
                      "type": "string",
                      "description": "food intake obect id"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "UpdateFoodIntakeRequest": {
        "type": "object",
        "required":["carbohidrates", "protein", "fat", "dish", "type"],
        "properties": {
          "carbohidrates": {
            "type": "number",
            "description": "amount of carbohidrates in respective product",
            "example": 140
          },
          "protein": {
            "type": "number",
            "description": "amount of protein in respective product",
            "example": 30
          },
          "fat": {
            "type": "number",
            "description": "amount of fat in respective product",
            "example": 50
          },
          "dish": {
            "type": "string",
            "description": "name of the dish",
            "example": "Avocado"
          },
          "type": {
            "type": "string",
            "description": "food intake type",
            "example": "breakfast"
          }
        }
      },
      "UpdateFoodIntakeResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "success message",
            "example": "Food intake successfuly added"
          },
          "data": {
            "type": "object",
            "properties": {
              "carbohidrates": {
                "type": "number",
                "description": "amount of carbohidrates in respective product",
                "example": 140
              },
              "protein": {
                "type": "number",
                "description": "amount of protein in respective product",
                "example": 30
              },
              "fat": {
                "type": "number",
                "description": "amount of fat in respective product",
                "example": 50
              },
              "dish": {
                "type": "string",
                "description": "name of the dish",
                "example": "Avocado"
              },
              "_id": {
                "type": "string",
                "description": "food intake obect id"
              }
            }
          }
        }
      },
      "ResetWaterIntakeResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "success message",
            "example": "water intake stats has been successfuly reset"
          },
          "waterIntake": {
            "type": "number",
            "description": "waterIntake value in mL after reset",
            "example": 0
          }
        }
      },
      "getStatisticsRequest": {
        "type": "object",
        "required": true,
        "properties": {
          "dateFrom": {
            "type": "string",
            "description": "date string in arbitrary format (toISOString is preferable)",
            "example": "2023-12-15"
          },
          "dateTo": {
            "type": "string",
            "description": "date string in arbitrary format (toISOString is preferable)",
            "example": "2023-12-17T12:23:43.916Z"
          }
        }
      },
      "getStatisticsResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "example": "2023-12-17"
            },
            "stats": {
              "type": "object",
              "properties": {
                "foodIntake": {
                  "type": "object",
                  "properties": {
                    "breakfast": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties":{
                          "carbohidrates": {
                            "type": "number",
                            "description": "respective nutrition element value",
                            "example": 8.5
                          },
                          "protein": {
                            "type": "number",
                            "description": "respective nutrition element value",
                            "example": 2
                          },
                          "fat": {
                            "type": "number",
                            "description": "respective nutrition element value",
                            "example": 14.7
                          },
                          "dish": {
                            "type": "string",
                            "description": "name of the dish",
                            "example": "Avocado"
                          },
                          "_id": {
                            "type": "string",
                            "description": "id of food intake",
                            "example": "657f48154407e426809fa649"
                          }
                        }
                      }
                    }
                  }
                },
                "waterIntake":{
                  "type": "number",
                  "description": "water-intake value in ml",
                  "example": 1500
                },
                "calories":{
                  "type": "number",
                  "description": "calories value",
                  "example": 1000
                },
                "weight":{
                  "type": "number",
                  "description": "user's weight as of certain date",
                  "example": 1000
                },
                "_id": {
                  "type": "string",
                  "description": "id of stats object",
                  "example": "657f46c67f454d34f0e89e30"
                }
              }
            },
            "_id": {
              "type": "string",
              "description": "id of day object",
              "example": "657f46c67f454d34f0e89e2f"
            }

          }
        }
      },
      "securitySchemes": {
        "Bearer": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    }
  }
}
