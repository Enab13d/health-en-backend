{
  "openapi": "3.0.1",
  "info": {
    "version": "2.0.0",
    "title": "Swagger test",
    "description": "Showing off swagger-ui-express"
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [{ "url": "http://localhost:3000" }],

  "tags": [
    {
      "name": "Auth",
      "description": "Authorization endpoints"
    },

    {
      "name": "Avatar",
      "description": "Update user's avatar endpoint"
    },

    {
      "name": "Recommended foods",
      "description": "Getting recommended foods list"
    }
  ],

  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "User registration",
        "parameters": [],

        "requestBody": {
          "description": "Registration's object",
          "required": true,

          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",

            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "409": {
            "description": "Provided email already exists",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/auth/signin": {
      "post": {
        "tags": ["Auth"],
        "summary": "User login",
        "parameters": [],

        "requestBody": {
          "description": "Login's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/auth/forgot-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "User forgot password",
        "parameters": [],

        "requestBody": {
          "description": "Forgot-password's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ForgotRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation (new password sent)",
            "content": {}
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "404": {
            "description": "User not found",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/auth/signout": {
      "post": {
        "tags": ["Auth"],
        "summary": "User logout",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": false,
          "content": {}
        },
        "responses": {
          "204": {
            "description": "User signed out",
            "content": {}
          }
        }
      }
    },

    "/api/user/water-intake": {
      "post": {
        "tags": ["Stats", "Water-intake"],
        "summary": "Add water consumption info",
        "parameters": [],
        "requestBody": {
          "description": "addWaterIntake object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddWaterIntakeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddWaterIntakeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      },
      "delete": {
        "tags": ["Stats"],
        "summary": "Reset water consumption value to 0 for current day",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResetWaterIntakeResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "404": {
            "description": "Not found. User has no such records that may be reset on that date",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },
    "/api/user/food-intake": {
      "post": {
        "tags": ["Stats", "Food-intake"],
        "summary": "Add food intake info",
        "parameters": [],
        "requestBody": {
          "description": "addFoodIntake object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddFoodIntakeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddFoodIntakeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      },
      "delete": {
        "tags": ["Stats"],
        "summary": "Delete food intake of specified type for current date",
        "parameters": [],
        "requseBody": {
          "description": "reset waterIntake object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResetFoodIntakeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResetFoodIntakeResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "404": {
            "description": "Not found. User has no such records that may be reset on that date",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },
    "/api/user/food-intake/{id}": {
      "put": {
        "tags": ["Stats", "Food-intake"],
        "summary": "Update food intake entry by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "id of the food intake entry to be updated",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "addFoodIntake object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFoodIntakeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateFoodIntakeResponse"
                }
              }
            }
          },

          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/user/statistics": {
      "get": {
        "tags": ["Statistics"],
        "summary": "Get user's stats within requested period, including calories and water consumtion, weight",
        "parameters": [],
        "requestBody": {
          "description": "getStats object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/getStatisticsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getStatisticsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": { "message": "Invalid date format" }
          },
          "401": {
            "description": "Unauthorized (email or password is wrong)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },

    "/api/user/avatars": {
      "post": {
        "tags": ["Avatar"],
        "summary": "Updating user's avatar",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Avatar file",
          "required": true,
          "content": {}
        },
        "responses": {
          "200": {
            "description": "User's avatar updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "avatarURL": {
                      "type": "string",
                      "description": "User's avatar url"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request (image is undefined)",
            "content": {}
          }
        }
      }
    },

    "/api/recommended-food": {
      "get": {
        "tags": ["Recommended foods"],
        "parameters": [],

        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getRecommendedFoodsResponse"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password",
          "goal",
          "gender",
          "age",
          "height",
          "weight",
          "activity"
        ],

        "properties": {
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "John Johnson"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          },
          "goal": {
            "type": "string",
            "enum": ["lose fat", "maintain", "gain muscle"]
          },

          "gender": {
            "type": "string",
            "enum": ["male", "female"]
          },

          "age": {
            "type": "number",
            "example": 35
          },

          "height": {
            "type": "number",
            "example": 170
          },

          "weight": {
            "type": "number",
            "example": 80
          },

          "activity": {
            "type": "number",
            "enum": [1.2, 1.375, 1.55, 1.725, 1.9]
          }
        }
      },

      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "User's token"
          },
          "user": {
            "type": "object",
            "properties": {
              "nutrients": {
                "type": "object",
                "properties": {
                  "protein": {
                    "type": "number",
                    "description": "Daily goal's protein",
                    "example": 600
                  },
                  "fat": {
                    "type": "number",
                    "description": "Daily goal's fat",
                    "example": 500
                  },
                  "carbonohidrates": {
                    "type": "number",
                    "description": "Daily goal's carbonohidrates",
                    "example": 1600
                  }
                }
              },
              "_id": {
                "type": "string",
                "description": "User's id",
                "example": "873rgbfjcr7w94rwfbcs7w"
              },
              "name": {
                "type": "string",
                "description": "User's name",
                "example": "John Johnson"
              },
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email"
              },
              "password": {
                "type": "string",
                "description": "Hashed user's password"
              },
              "goal": {
                "type": "string",
                "description": "User's goal",
                "example": "maintain"
              },
              "gender": {
                "type": "string",
                "description": "User's gender",
                "example": "female"
              },
              "age": {
                "type": "number",
                "description": "User's age",
                "example": 35
              },
              "height": {
                "type": "number",
                "description": "User's height in cm",
                "example": 170
              },
              "weight": {
                "type": "number",
                "description": "User's weight in kg",
                "example": 80
              },
              "activity": {
                "type": "number",
                "description": "User's activity",
                "example": 1.2
              },
              "bmr": {
                "type": "number",
                "description": "User's daily goal of calories",
                "example": 2600
              },
              "water": {
                "type": "number",
                "description": "User's daily goal of water in ml",
                "example": 2000
              },
              "token": {
                "type": "string",
                "description": "User's token"
              },
              "avatarURL": {
                "type": "string",
                "description": "User's avatar link"
              }
            }
          }
        }
      },

      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],

        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },

      "ForgotRequest": {
        "type": "object",
        "required": ["email"],

        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          }
        }
      },
      "AddWaterIntakeRequest": {
        "type": "object",
        "required": ["waterIntake"],
        "properties": {
          "waterIntake": {
            "type": "number",
            "description": "water-intake value in ml. Number may be both decimal and integer, but must be positive",
            "example": 1000
          }
        }
      },
      "AddWaterIntakeResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "success message",
            "example": "water intake increased by 500 ml"
          },
          "waterIntake": {
            "type": "number",
            "description": "waterIntake value in mL after update",
            "example": 2000
          }
        }
      },
      "AddFoodIntakeRequest": {
        "type": "object",
        "required": [
          "carbohidrates",
          "protein",
          "fat",
          "dish",
          "type",
          "calories"
        ],
        "properties": {
          "carbohidrates": {
            "type": "number",
            "description": "amount of carbohidrates in respective product",
            "example": 140
          },
          "protein": {
            "type": "number",
            "description": "amount of protein in respective product",
            "example": 30
          },
          "fat": {
            "type": "number",
            "description": "amount of fat in respective product",
            "example": 50
          },
          "dish": {
            "type": "string",
            "description": "name of the dish",
            "example": "Avocado"
          },
          "type": {
            "type": "string",
            "description": "food intake type",
            "example": "breakfast"
          },
          "calories": {
            "type": "number",
            "description": "amount of calories in respective product",
            "example": 500
          }
        }
      },
      "AddFoodIntakeResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "success message",
            "example": "Food intake successfuly added"
          },
          "totalCalories": {
            "type": "number",
            "description": "number of totalCalories for today including recently added food intake",
            "example": 2000
          },
          "result": {
            "type": "array",
            "items": {
              "breakfast": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "carbohidrates": {
                      "type": "number",
                      "description": "amount of carbohidrates in respective product",
                      "example": 140
                    },
                    "protein": {
                      "type": "number",
                      "description": "amount of protein in respective product",
                      "example": 30
                    },
                    "fat": {
                      "type": "number",
                      "description": "amount of fat in respective product",
                      "example": 50
                    },
                    "dish": {
                      "type": "string",
                      "description": "name of the dish",
                      "example": "Avocado"
                    },
                    "calories": {
                      "type": "number",
                      "description": "amount of calories in respective product",
                      "example": 640
                    },
                    "_id": {
                      "type": "string",
                      "description": "food intake obect id"
                    }
                  }
                }
              },
              "dinner": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              },
              "snack": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              },
              "lunch": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "UpdateFoodIntakeRequest": {
        "type": "object",
        "required": ["carbohidrates", "protein", "fat", "dish", "type", "calories"],
        "properties": {
          "carbohidrates": {
            "type": "number",
            "description": "amount of carbohidrates in respective product",
            "example": 140
          },
          "protein": {
            "type": "number",
            "description": "amount of protein in respective product",
            "example": 30
          },
          "fat": {
            "type": "number",
            "description": "amount of fat in respective product",
            "example": 50
          },
          "dish": {
            "type": "string",
            "description": "name of the dish",
            "example": "Avocado"
          },
          "type": {
            "type": "string",
            "description": "food intake type",
            "example": "breakfast"
          },
          "calories": {
            "type": "number",
            "description": "amount of calories in respective product",
            "example": 500
          }
        }
      },
      "UpdateFoodIntakeResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "success message",
            "example": "Food intake successfuly added"
          },
           "totalCalories": {
            "type": "number",
            "description": "number of totalCalories for today after recent update",
            "example": 2000
          },
          "data": {
            "type": "object",
            "properties": {
              "carbohidrates": {
                "type": "number",
                "description": "amount of carbohidrates in respective product",
                "example": 140
              },
              "protein": {
                "type": "number",
                "description": "amount of protein in respective product",
                "example": 30
              },
              "fat": {
                "type": "number",
                "description": "amount of fat in respective product",
                "example": 50
              },
              "dish": {
                "type": "string",
                "description": "name of the dish",
                "example": "Avocado"
              },
              "calories": {
                "type": "number",
                "description": "amount of calories in respective product",
                "example": 140
              },
              "_id": {
                "type": "string",
                "description": "food intake obect id"
              }
            }
          }
        }
      },
      "ResetFoodIntakeRequest": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "description": "food intake type",
            "example": "dinner"
          }
        }
      },
      "ResetFoodIntakeResponse": {
"type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "success message",
            "example": "water intake stats has been successfuly reset"
          },
          "type": {
            "type": "array"
          }
        }
      },
      "ResetWaterIntakeResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "success message",
            "example": "water intake stats has been successfuly reset"
          },
          "waterIntake": {
            "type": "number",
            "description": "waterIntake value in mL after reset",
            "example": 0
          }
        }
      },
      "getStatisticsRequest": {
        "type": "object",
        "required": true,
        "properties": {
          "dateFrom": {
            "type": "string",
            "description": "date string in arbitrary format (toISOString is preferable)",
            "example": "2023-12-15"
          },
          "dateTo": {
            "type": "string",
            "description": "date string in arbitrary format (toISOString is preferable)",
            "example": "2023-12-17T12:23:43.916Z"
          }
        }
      },
      "getStatisticsResponse": {
       "type": "object",
       "properties": {
        "data": {
           "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "example": "2023-12-17"
            },
            "stats": {
              "type": "object",
              "properties": {
                "foodIntake": {
                  "type": "object",
                  "properties": {
                    "breakfast": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "carbohidrates": {
                            "type": "number",
                            "description": "respective nutrition element value",
                            "example": 8.5
                          },
                          "protein": {
                            "type": "number",
                            "description": "respective nutrition element value",
                            "example": 2
                          },
                          "fat": {
                            "type": "number",
                            "description": "respective nutrition element value",
                            "example": 14.7
                          },
                          "dish": {
                            "type": "string",
                            "description": "name of the dish",
                            "example": "Avocado"
                          },
                          "calories": {
                  "type": "number",
                  "description": "calories value",
                  "example": 1000
                },
                          "_id": {
                            "type": "string",
                            "description": "id of food intake",
                            "example": "657f48154407e426809fa649"
                          }
                        }
                      }
                    }
                  }
                },
                "waterIntake": {
                  "type": "number",
                  "description": "water-intake value in ml",
                  "example": 1500
                },
                "totalCalories": {
                  "type": "number",
                  "description": "total calories value for specific date",
                  "example": 1000
                },
                "weight": {
                  "type": "number",
                  "description": "user's weight as of certain date",
                  "example": 1000
                },
                "_id": {
                  "type": "string",
                  "description": "id of stats object",
                  "example": "657f46c67f454d34f0e89e30"
                }
              }
            },
            "_id": {
              "type": "string",
              "description": "id of day object",
